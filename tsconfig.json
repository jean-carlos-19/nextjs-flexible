{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/controllers": ["./src/architecture/controllers"],
      "@/models": ["./src/architecture/models"],
      "@/services": ["./src/architecture/services"],
      "@/services/http": ["./src/architecture/services/http/http.ts"],
      "@/atomic/element": ["./src/architecture/atomic/element"],
      "@/atomic/component": ["./src/architecture/atomic/component"],
      "@/atomic/design": ["./src/architecture/atomic/design"],
      "@/constant/*": ["./src/constant/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/types/*": ["./src/types/*"],
      "@/graphql": ["./graphql"],
      "@/validation":["./src/validation"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"],
}
